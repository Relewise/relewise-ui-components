{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "allowJs": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "ts-lit-plugin"
      },
      {
        "name": "typescript-lit-html-plugin"
      }
    ],
    "lib": [
      "ES2020",
      "DOM.Iterable",
      "es5",
      "es6",
      "dom",
      "esnext"
    ],
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "vite/client",
    "tests"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
  ]
}